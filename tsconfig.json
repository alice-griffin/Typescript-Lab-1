{
    "compilerOptions": {
        "target": "es6", // what Typescript will be compiled to
        "module": "commonjs", // what type of module generator will
        "moduleResolution": "node", // how each module is resolved
        "sourceMap": true, // generates a `.map` file
        "removeComments": true, // removes all comments aside from
        // beginning with /*!
        "lib": [
            "es2015",
            "dom"
        ], // various types that Typescript
    }
}